<mvc:View controllerName="com.myorg.contactList.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table">
  <App id="idAppControl" >
    <pages>
        <Page showHeader="true" title="Lista de Contatos">
          <FlexBox alignItems="Start">
            <Button text="Adicionar Contato" width="100%"  press="onClickAddButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button>
            <Button text="Alterar Contato" width="100%"  press="onClickChangeButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button>
            <Button text="Excluir Contato" width="100%"  press="onClickDeleteButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button> 
          </FlexBox>

          <content>
            <t:Table id="Table" rows="{/ContactsCollection}" selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste" ariaLabelledBy="title">
              <t:columns>
                <t:Column>
                	<Label text="Nome" />
	      			<t:template>
						<Text id= "TableName" text="{Name}" wrapping="false" />
					</t:template>
                </t:Column>

                <t:Column>
                	<Label text="Telefone" />
                	<t:template>
						<Text id= "TelephoneName" text="{Telephone}" wrapping="false" />
					</t:template>
                </t:Column>
              </t:columns>
            </t:Table>
          </content>

        </Page>
    </pages>
  </App>
</mvc:View>