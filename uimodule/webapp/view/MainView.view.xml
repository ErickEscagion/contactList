<mvc:View controllerName="com.myorg.contactList.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table">
  <App id="idAppControl" >
    <pages>
        <Page showHeader="true" title="Lista de Contatos">
          <FlexBox alignItems="Start">
            <Button text="Adicionar Contato" width="100%"  press=".onClickAddContactButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button>
            <Button text="Alterar Contato" width="100%"  press=".onClickChangeContactButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button>
            <Button text="Excluir Contato" width="100%"  press=".onClickDeleteContactButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button> 
            <Button text="View Teste" width="100%"  press="onClickViewTestButton" class="sapUiSmallMarginEnd">
              <layoutData><FlexItemData growFactor="1" /></layoutData>
            </Button> 
          </FlexBox>

          <content>
            <t:Table rows="{/ContactsCollection}" selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste" ariaLabelledBy="title">
              <t:columns>
                <t:Column>
                	<Label text="Nome" />
	      			<t:template>
						<Text text="{Name}" wrapping="false" />
					</t:template>
                </t:Column>

                <t:Column>
                	<Label text="Telefone" />
                	<t:template>
						<Text text="{Telephone}" wrapping="false" />
					</t:template>
                </t:Column>
              </t:columns>
            </t:Table>
          </content>

        </Page>
    </pages>
  </App>
</mvc:View>